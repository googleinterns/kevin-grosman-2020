INPUT_FILE=${1:-input.txt}
INCLUDE_MEASURED_CUJ=${2?"ERROR: need to specify whether the measured CUJ should be included in the profile"}
FILE_NAME="${INPUT_FILE%.*}"
PRE_CUJ=$(sed '1q;d' $INPUT_FILE)
POST_CUJ=$(sed '2q;d' $INPUT_FILE)
RECORD=$(sed '4q;d' $INPUT_FILE)



##FORMAT PRE AND POS CUJS
PRE_CUJ=${PRE_CUJ//\‘/\'}
PRE_CUJ=${PRE_CUJ//\’/\'}
POST_CUJ=${POST_CUJ//\‘/\'}
POST_CUJ=${POST_CUJ//\’/\'}

#use escape char to allow special characters (which would terminate the argument in the am instrument command or do other undesirable things).
SpecialChars=(";"  "'" "&" "%" "(" ")" "^" "#" "@" "!" "+")
for char in ${SpecialChars[@]}; do
	exp="\\${char}"
	PRE_CUJ=${PRE_CUJ//$exp/\\$char}
	POST_CUJ=${POST_CUJ//$exp/\\$char}
done
# Wrap strings in \" to allow for spaces within them. 
PRE_CUJ="\\\"$PRE_CUJ\\\""
POST_CUJ="\\\"$POST_CUJ\\\""


echo "Resetting the profile...."
adb shell cmd package compile --reset com.google.android.apps.maps

#Get the desired actions into the profile::
echo "Adding the desired actions to the profile...."

./gradlew installDebugAndroidTest
cmd="adb shell am instrument -w -e class com.example.firstapp.UserCujTest#userRunCujOnce -e pre $PRE_CUJ -e post $POST_CUJ -e include $INCLUDE_MEASURED_CUJ com.example.firstapp.test/androidx.test.runner.AndroidJUnitRunner"
eval $cmd


echo "Waiting..."
sleep 60
adb shell am force-stop com.google.android.apps.maps
PROFILE_SIZE=$(adb shell stat -c%s /data/misc/profiles/cur/0/com.google.android.apps.maps/primary.prof)
echo "size of profile is $PROFILE_SIZE"

echo "Recompiling profile..."
adb shell cmd package compile -m speed-profile -f com.google.android.apps.maps

echo "Executing and measuring the CUJ..."
./executeCuj $INPUT_FILE

if [ "$RECORD" = "r" ] && [ -f "median_clip.mp4" ]
then 
	OUTPUT="${FILE_NAME}_yes_in_profile.mp4"
	mv median_clip.mp4 $OUTPUT
	echo "output file is called: $OUTPUT"
fi

